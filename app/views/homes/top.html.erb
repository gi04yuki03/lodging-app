<%= render "shared/header" %>

<div class="top">
 <div class="top-main">
  <div class="container top-container">
   <div class="row col-lg-6">
    <div class="top-form">
     <div class="top-form-part bg-white p-3">
      <%= form_with url: search_posts_path, method: :get, local: true do |f| %>
      <p class="mb-5 h2">Potepan Shareでまだ体験したことのない旅をしよう</p>
      <p class="h7">エリア</p>
           <div><%= f.text_field :area , placeholder:"東京" , class: "mb-4 form-area" %></div>
       <div><%= f.submit '探す', class: "btn btn-primary mb-4 px-5 form-button" %></div>
      <% end %>
      </div>
     </div>
    </div>
  </div>
 </div>
 
 <div class="container">
  <div class="panel-area m-5">
   <h1 class="section-title">おすすめのエリア</h1>
    <div class="row">
     <div class="panel-item col-lg-3 col-6">
      <span>東京</span>
       <a href="posts/search?area=%E6%9D%B1%E4%BA%AC"><img class="panel-image" src="https://presite-potepancamp-rails-02.herokuapp.com/assets/img_tokyo.jpg"></a>
       <div class="shadow"></div>
     </div>
     <div class="panel-item col-lg-3 col-6">
      <span>大阪</span>
      <a href="https://presite-potepancamp-rails-02.herokuapp.com/rooms/search?area=%E5%A4%A7%E9%98%AA"><img class="panel-image" src="https://presite-potepancamp-rails-02.herokuapp.com/assets/img_osaka.jpg"></a>
      <div class="shadow"></div>
     </div>
    <div class="panel-item col-lg-3 col-6">
     <span>京都</span>
     <a href="https://presite-potepancamp-rails-02.herokuapp.com/rooms/search?area=%E4%BA%AC%E9%83%BD"><img class="panel-image shadow" src="https://presite-potepancamp-rails-02.herokuapp.com/assets/img_kyoto.jpg"></a>
     <div class="shadow"></div>
    </div>
     <div class="panel-item col-lg-3 col-6">
     <span>札幌</span>
     <a href="https://presite-potepancamp-rails-02.herokuapp.com/rooms/search?area=%E6%9C%AD%E5%B9%8C"><img class="panel-image" src="https://presite-potepancamp-rails-02.herokuapp.com/assets/img_sapporo.jpg"></a>
     <div class="shadow"></div>
    </div>
  </div>
 </div>
</div>


