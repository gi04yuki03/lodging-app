<%= render "shared/header" %>

<div class="box2">
  <div class="box-inner">
    <%= form_with model: @user, url: user_session_path, local: true do |f| %>
    <p class="mb-5">ログイン</p>
    <div class="box-email">
      <span class="text-white bg-danger p-2 mx-3">必須</span><%= f.label :email, "メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    <div class="box-password">
      <span class="text-white bg-danger p-2 mx-3">必須</span><%= f.label :password, "パスワード" %>
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>
    <div class="box-login mt-5">
      <%= f.submit "ログイン" %>
    </div>
    <% end %>

    <div>
      <%= link_to "新しいアカウントを作成", new_user_registration_path %>
    </div>
  </div>
</div>

<%= render 'shared/footer' %>