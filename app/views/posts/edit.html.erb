<%= render "shared/header" %>
<div class = "main">
  <h1>ルーム情報編集</h1>
  
  <% if @post.errors.any? %>
 <div class="errors">
   <%= @post.errors.count %>件のエラーが発生しました
   <% @post.errors.full_messages.each do |message| %>
    <%= message %>
   <% end %>
  </div>
 <% end %>
  
  <%= form_with model: @post do |f| %>
  
  <table>
     <tr>
       <th><%= f.label :room ,"ルーム名" %></th>
       <td><%= f.text_field :room %></td>
     </tr>
 
     <tr>
       <th><%= f.label :introduction ,"ルーム紹介" %></th>
       <td><%= f.text_area :introduction %></td>
     </tr>
 
     <tr>
       <th><%= f.label :price ,"料金" %></th>
       <td><%= f.text_field :price %></td>
     </tr>
 
     <tr>
       <th><%= f.label :address ,"住所" %></th>
       <td><%= f.text_field :address %></td>
     </tr>
     
     <tr>
       <th><%= f.label :picture ,"ルーム画像" %></th>
       <td><%= f.file_field :picture, id:"room_picture", class:"hidden" %></td>
     </tr>
   </table>
   <%= f.submit '編集' %>
   <% end %>
</div>

<%= render 'shared/footer' %>